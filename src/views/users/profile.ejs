<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="profile-card p-4">
                <div class="text-center mb-4">
                    <img src="/images/icons/avatar.png" alt="Photo de profil" class="profile-image mb-3">
                    <h2 class="fw-bold text-uppercase"><%= user.name %></h2>
                    <p class="text-muted"><%= user.email %></p>
                </div>
                
                <div class="row mb-4">
                    <div class="col-6">
                        <div class="stat-card p-3 text-center">
                            <h3 class="mb-1"><%= albumCount  %></h3>
                            <p class="mb-0 text-muted">Albums créés</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="stat-card p-3 text-center">
                            <h3 class="mb-1"><%= photoCount  %></h3>
                            <p class="mb-0 text-muted">Photos ajoutées</p>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-center">
                    <!-- <button class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Modifier le profil
                    </button> -->
                    <form action="/logout" method="POST">
                        <button class="btn btn-outline-danger" type="submit">
                            <i class="fas fa-sign-out-alt me-2"></i>Se déconnecter
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>